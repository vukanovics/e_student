{{! vim: set ft=html: }}

<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/tailwind.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Nunito&display=swap" rel="stylesheet"> 
    <title>E-Student</title>
  </head>
  <body class="bg-fixed w-full bg-center bg-cover bg-no-repeat bg-[url('/test1.webp')] m-auto items-center flex flex-col flex-grow">
    <div class="flex flex-row justify-between pt-16 w-full h-full">
      <div class="flex flex-col p-16 border-4 w-fit shrink-0 items-left lg:p-8 lg:border-2 dark:bg-dark_contentbg dark:border-dark_contentbd border-contentbd bg-contentbg">
        <a href="/courses" class="flex flex-row items-center">
          <i class="text-8xl las la-laptop-code lg:text-4xl text-maincap"></i>
          <p class="text-maincap">e-Student</p>
        </a>
        {{#if (eq user.account_type "Administrator")}}
          {{> components/button_link button_href="/generations" button_text=(i18n "Генерације")}}
          {{> components/button_link button_href="/programs" button_text=(i18n "Смерови")}}
          {{> components/button_link button_href="/users" button_text=(i18n "Корисници")}}
        {{/if}}
      </div>
      <div class="flex flex-col items-center p-32 space-y-8 w-full border-4 shadow-md lg:mx-32 lg:p-16 lg:border-2 lg:space-y-4 dark:bg-dark_contentbg dark:border-dark_contentbd border-contentbd bg-contentbg">
        {{> body}}
      </div>
        <div class="flex flex-col p-16 border-4 shrink-0 items-right lg:p-8 lg:border-2 dark:bg-dark_contentbg dark:border-dark_contentbd border-contentbd bg-contentbg">
      </div>
    </div>
  </body>
</html>
