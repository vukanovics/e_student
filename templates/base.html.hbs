{{! vim: set ft=html: }}

<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/tailwind.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Nunito&display=swap" rel="stylesheet"> 
    <title>E-Student</title>
  </head>
  <body class="bg-fixed w-full bg-center bg-cover bg-no-repeat bg-[url('/test1.webp')] m-auto items-center flex flex-col flex-grow">
    <div class="flex justify-between items-center px-8 py-16 w-full h-12 font-sans text-5xl font-bold border-b-4 shadow-lg border-x-4 lg:border-x-0 lg:border-b-2 dark:border-dark_barborder border-barborder dark:bg-dark_barbg dark:text-dark_barfg lg:py-0 lg:text-lg text-barfg bg-barbg">
      <div class="flex items-center space-x-2">
        <a href="/courses" class="flex flex-row items-center">
          <i class="text-8xl las la-laptop-code lg:text-4xl text-maincap"></i>
          <p class="text-maincap">e-Student</p>
        </a>
      </div>
      {{#if (eq user.account_type "Administrator")}}
      <div>
        {{> components/button_link button_href="/generations" button_text=(i18n "Генерације")}}
        {{> components/button_link button_href="/programs" button_text=(i18n "Смерови")}}
        {{> components/button_link button_href="/users" button_text=(i18n "Корисници")}}
      </div>
      {{/if}}
      {{> components/login_information}}
    </div>
    <div class="flex flex-col items-center p-32 my-32 space-y-8 border-4 shadow-md lg:p-16 lg:border-2 lg:space-y-4 dark:bg-dark_contentbg dark:border-dark_contentbd border-contentbd bg-contentbg w-[90vw]">
        {{> body}}
    </div>
  </body>
</html>
