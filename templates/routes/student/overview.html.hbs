{{! vim: set ft=html: }}

{{#*inline "body"}}

{{#each courses}}
<a href="course/{{this.url}}">Course: {{this.name}}</a>
  {{#each this.assignments}}
    {{#if this.Grade}}
      <p>Assignment: {{this.Grade.name}} - Grade: {{this.Grade.grade}}</p>
    {{/if}}
    {{#if this.Point}}
      <p>Assignment: {{this.Point.name}} - Points: {{this.Point.points}} out of {{this.Point.max_points}}</p>
    {{/if}}
  {{/each}}
{{/each}}

{{/inline}}
{{> base }}
