{{! vim: set ft=html: }}

{{#*inline "body"}}

{{#each courses}}
<a class="flex flex-row items-center" href="course/{{this.url}}">
  <div class="font-sans text-2xl font-bold text-caption" >{{this.name}}</div>
  {{#each this.assignments}}
    {{#if this.Grade}}
      {{> components/gradebar value=this.Grade.grade icon="la-plus-circle" bgcol="bg-ccexam-500 progress-bg:bg-ccexam-500" accentcol="progress:bg-ccexam-300" textcol="text-ccexam-50" iconcol="text-ccexam-200"}}
    {{/if}}
    {{#if this.Point}}
      {{> components/pointbar value=this.Point.points maxvalue=this.Point.max_points icon="la-plus-circle" bgcol="bg-cccolq-500 progress-bg:bg-cccolq-500" accentcol="progress:bg-cccolq-300" textcol="text-cccolq-50" iconcol="text-cccolq-200"}}
    {{/if}}
  {{/each}}
</a>
{{/each}}

{{/inline}}
{{> base }}
